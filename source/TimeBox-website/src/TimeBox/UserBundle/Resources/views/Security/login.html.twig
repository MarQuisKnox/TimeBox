{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="loginForm">

    <form action="{{ path("fos_user_security_check") }}#connection" method="post">
        {% if error %}
        <div class="form-group">
            <p class="alert alert-danger" style="padding:5px;">{{ error|trans }}</p>
        </div>
        {% endif %}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group">
            <label for="username" class="sr-only">Username</label>
            <input class="form-control" maxlength="30" type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}"/>
        </div>

        <div class="form-group">
            <label for="password" class="sr-only">Password</label>
            <input class="form-control" maxlength="30" type="password" id="password" name="_password" placeholder="Password"/>
        </div>

        <div class="form-group">
            <a class="headerLink" href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
        </div>

        <div class="form-group">
            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
{#
        <div>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
#}
    </form>

</div>

{% endblock fos_user_content %}
