{% extends "TimeBoxMainBundle::layout.html.twig" %}

{% block container %} 
    <h3>Create folder</h3>

    <div class="col-xs-6 col-sm-4">
        <form action="#" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="folderName" placeholder="Name"/>
                <input type="hidden" name="folderParent" value="{{ parentFolderId }}" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Ok" />
            </div>
        </form>
    </div>
{% endblock %}
