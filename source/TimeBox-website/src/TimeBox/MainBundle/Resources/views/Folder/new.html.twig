{% extends "TimeBoxMainBundle::layout.html.twig" %}

{% block container %} 
    <div class="header_idbox">
    	<h3>Create folder</h3>
   		<div class="col-sm-8">
        <form action="#" method="post">
            <div class="form-group">
                <input class="form-control col-sm-9" type="text" name="folderName" placeholder="Name"/>
